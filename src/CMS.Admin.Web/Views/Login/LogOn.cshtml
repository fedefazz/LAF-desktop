@model blsp.Admin.Web.Models.LoginDto
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-md-4 p-0">
            <div class="main-panel">
                <div class="flex-center">

                    <h2 class="logo">Bolsapel | Scrap Manager</h2>

                    <div class="holder">
                        <div class="holder-heading">
                            <h3 class="panel-title">Acceso</h3>
                        </div>
                        <div class="holder-body">
                            <div class="form">
                                <form role="form" action="/Login/LogOn" method="post" autocomplete="off" id="Logon">
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("returnUrl", Model.ReturnUrl)
                                    <div class="form-group">
                                        <input tabindex="1" id="username" name="username" type="email" class="form-control" required value="" autofocus autocomplete="off">
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label class="control-label" for="username">Email</label>
                                    </div>
                                    <div class="form-group">
                                        <input tabindex="2" id="password" name="password" type="password" class="form-control" required value="" autocomplete="off">
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label class="control-label" for="password">Password</label>
                                        <a href="/Login/ForgotPassword" style="margin-top:5px;;display:inline-block;float:right;font-size:14px;">Olvido su password?</a>
                                    </div>

                                    <div class="form-group form-button">
                                        <button tabindex="3" type="submit" class="btn btn-block btn-primary">Entrar</button>
                                    </div>
                                    @Html.CustomValidationSummary()
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-8 p-0">
            <div class="background">

            </div>
        </div>
    </div>
</div>
