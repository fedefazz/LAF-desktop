@{
    dynamic user = ViewBag.User;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-md-4 p-0">
            <div class="main-panel">
                <div class="flex-center">

                    <h2 class="logo">RAY</h2>

                    <div class="holder">
                        <div class="holder-heading">
                            <h3 class="panel-title">Reset password</h3>
                        </div>
                        <div class="holder-body">
                            <div class="form">
                                <form role="form" action="/Login/ResetPassword" method="post" id="ResetPassword">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" id="email" value="@user.Email" name="email" />
                                    <input type="hidden" id="token" value="@user.Token" name="token" />
                                    <div class="form-group">
                                        <input id="password" name="password" type="password" class="form-control" required value="" autocomplete="off">
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label class="control-label" for="password">Password</label>
                                        <div class="hint">
                                            <h5><i class="fa fa-question-circle"></i></h5>
                                            <div>
                                                <ul>
                                                    <li>8-12 characters long</li>
                                                    <li>a capital letter</li>
                                                    <li>a lower case letter</li>
                                                    <li>a number</li>
                                                    <li>a special character</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input id="confirmpassword" name="confirmpassword" type="password" class="form-control" required value="" autocomplete="off">
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label class="control-label" for="username">Confirm Password</label>
                                    </div>
                                    <div class="form-group form-button">
                                        <button type="submit" class="btn btn-block btn-primary">Reset password</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <a href="/Login/LogOn" class="btn btn-primary btn-back"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-8 p-0">
            <div class="background">

            </div>
        </div>
    </div>
</div>
